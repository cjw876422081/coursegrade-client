.oauth-image {
        width: 100rpx;
        height: 100rpx;
        border: 1rpx solid #dddddd;
        border-radius: 100rpx;
        margin: 0 40rpx;
        background-color: #ffffff;
}
.oauth-image image {
        width: 60rpx;
        height: 60rpx;
        margin: 20rpx;
}

